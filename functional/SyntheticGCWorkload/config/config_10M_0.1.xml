<configuration maxDuration="15m">
<workload duration="10m" numProducerThreads="4" paymentPeriod="0" maintenancePeriod="1us">		
	<payloadSet startTime="0" endTime="20s" dataRate="20MB/s" payloadType="auto">
		<payload proportionOfAllocation="10%" size="3kB" lifespan="1h" />				
		<payload proportionOfAllocation="10%" size="3kB" lifespan="22s" />			
		<payload proportionOfAllocation="15%" size="2kB" lifespan="1h" />				
		<payload proportionOfAllocation="15%" size="2kB" lifespan="22s" />			
		<payload proportionOfAllocation="25%" size="1kB" lifespan="1h" />				
		<payload proportionOfAllocation="25%" size="1kB" lifespan="22s" />												
	</payloadSet>
	<payloadSet startTime="20s">							
		<payloadSet dataRate="40MB/s" payloadType="reflexive">								
			<payload proportionOfAllocation="5%" size="80B" lifespan="1ms" />
			<payload proportionOfAllocation="7%" size="192B" lifespan="1ms" />
			<payload proportionOfAllocation="8%" size="256B" lifespan="1ms" />
			<payload proportionOfAllocation="25%" size="512B" lifespan="1ms" />		
			<payload proportionOfAllocation="30%" size="640B" lifespan="1ms" />					
			<payload proportionOfAllocation="25%" size="768B" lifespan="1ms" />		
		</payloadSet>	
		<payloadSet dataRate="15MB/s" payloadType="auto">									
			<payload proportionOfAllocation="10%" size="2.5kB" lifespan="12s" />							
			<payload proportionOfAllocation="20%" size="2.5kB" lifespan="7s" />				
			
			<payload proportionOfAllocation="10%" size="1280B" lifespan="12s" />							
			<payload proportionOfAllocation="20%" size="1280B" lifespan="7s" />		
			
			<payload proportionOfAllocation="20%" size="64MB"  lifespan="19s" />					
			<payload proportionOfAllocation="20%" size="64MB"  lifespan="9s" />					
		</payloadSet>
	</payloadSet>
</workload>

</configuration>